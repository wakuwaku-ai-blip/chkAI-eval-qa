# MongoDB Database Configuration
MONGODB_URI=mongodb://localhost:27017/chkAI-eval-qa

# For production MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/chkAI-eval-qa?retryWrites=true&w=majority

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=public/uploads

# Development/Production Environment
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=10
USER_RPM_LIMIT=5
GEMINI_RPM_LIMIT=10
MAX_CONCURRENT_REQUESTS=5

# Caching
CACHE_ENABLED=true
CACHE_TTL=3600

# Monitoring
METRICS_ENABLED=true
METRICS_RETENTION_DAYS=30

# Alerts
ALERTS_ENABLED=true
# SLACK_WEBHOOK_URL은 실제 슬랙 웹훅 URL로 설정하세요
SLACK_WEBHOOK_URL=your-slack-webhook-url-here
SLACK_CHANNEL=#notification
SLACK_USERNAME=chkAI Monitor
SLACK_ICON_EMOJI=:warning:
ALERT_COOLDOWN_MINUTES=5

# Evaluation Queue
EVALUATION_QUEUE_ENABLED=true
EVALUATION_QUEUE_MAX_CONCURRENT=5
EVALUATION_QUEUE_RETRY_ATTEMPTS=3
